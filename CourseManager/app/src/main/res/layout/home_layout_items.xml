<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_home_icon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10dp"
        android:text="@string/down_arrow"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_home_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="18dp"
        android:maxLines="1"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_home_icon_1"
        android:text="星期一"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/text_home_icon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@+id/text_home_day"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/down_arrow"
        android:layout_marginLeft="24dp" />
    <TextView
        android:id="@+id/text_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_home_day"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
