<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/course_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="20sp"
        android:text="@string/down_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/course_icon"
        app:layout_constraintTop_toTopOf="@+id/course_icon"
        android:text="英语"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/course_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="第2周-18周" />
    <TextView
        android:id="@+id/course_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/course_icon"
        app:layout_constraintStart_toEndOf="@+id/course_icon"
        android:text="1-2节"
        android:layout_marginLeft="24dp" />
    <TextView
        android:id="@+id/course_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:textSize="18sp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/course_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="是否提醒：否" />
    <TextView
        android:id="@+id/text_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/course_section"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
