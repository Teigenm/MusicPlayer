<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/all_song_app_bar"
        android:layout_height="336dp"
        android:layout_width="match_parent"
        style="@style/AppBarLayoutStyle"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/all_song_collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/background_vertical_04"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/all_song_toolbar"
                style="@style/ToolbarStyle"
                app:layout_collapseMode="pin"
                app:subtitleTextColor="@color/white"
                app:titleTextColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:fitsSystemWindows="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?attr/actionBarSize">
                    <RelativeLayout
                        android:id="@+id/all_song_title_image_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="96dp"
                        android:background="@color/ghost_white"
                        android:padding="4dp">
                        <ImageView
                            android:layout_width="108dp"
                            android:layout_height="108dp"
                            app:srcCompat="@mipmap/background_vertical_04"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/all_song_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_all_music"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_marginTop="36dp"
                        android:layout_marginStart="72dp"
                        app:layout_constraintTop_toTopOf="@id/all_song_title_image_layout"
                        app:layout_constraintStart_toEndOf="@id/all_song_title_image_layout"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/all_song_history_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/all_song_play_mode_image_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/gray"
                    app:srcCompat="@drawable/ic_random_play"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/text_play_mode_and_number"
                    app:layout_constraintTop_toTopOf="@id/all_song_play_mode_image_view"
                    app:layout_constraintStart_toEndOf="@id/all_song_play_mode_image_view"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/ic_three_horizontal_line">
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_song_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/all_song_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_no_border_start"
        android:backgroundTint="@color/colorPrimary"
        android:tint="@color/ghost_white"
        app:layout_anchor="@id/all_song_app_bar"
        app:layout_anchorGravity="bottom|end"
        app:borderWidth="0.0dip"
        app:fabSize="normal"
        app:maxImageSize="36dp"
        android:scaleType="center"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>