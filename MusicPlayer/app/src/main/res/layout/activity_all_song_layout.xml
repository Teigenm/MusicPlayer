<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/all_song_app_bar"
        android:layout_height="308dp"
        android:layout_width="match_parent"
        style="@style/AppBarLayoutStyle"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/all_song_collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/album_cover_14"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?actionBarSize">
                <RelativeLayout
                    android:id="@+id/all_song_title_image_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="42dp"
                    android:background="@color/ghost_white"
                    android:padding="4dp">
                    <ImageView
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        app:srcCompat="@mipmap/album_cover_14"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/all_song_title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_all_song"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:layout_marginTop="36dp"
                    android:layout_marginStart="72dp"
                    app:layout_constraintTop_toTopOf="@id/all_song_title_image_layout"
                    app:layout_constraintStart_toEndOf="@id/all_song_title_image_layout"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/all_song_toolbar"
                app:layout_collapseMode="pin"
                style="@style/MyToolbarStyle" >
                <TextView
                    android:id="@+id/all_song_toolbar_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="@string/text_all_song"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/common_single_song_list_layout"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/all_song_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_no_border_start"
        android:backgroundTint="@color/colorPrimary"
        android:tint="@color/ghost_white"
        app:layout_anchor="@id/all_song_app_bar"
        app:layout_anchorGravity="bottom|end"
        app:borderWidth="0.0dip"
        app:fabSize="normal"
        app:maxImageSize="36dp"
        android:scaleType="center"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>