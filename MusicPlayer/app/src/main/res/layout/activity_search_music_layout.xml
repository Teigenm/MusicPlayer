<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/search_music_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/colorPrimary">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:id="@+id/search_music_back_layout"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/search_music_back_image_view"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="8dp"
                    app:srcCompat="@drawable/ic_arrow_back_black"
                    android:tint="@color/colorPrimary"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp">
                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_music_search_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.appcompat.widget.SearchView>
            </RelativeLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_music_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_all_song"
            android:textColor="@color/gray_white"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_search_all_song"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp" />
    </RelativeLayout>
</RelativeLayout>